<!-- Path: IncognitoReads/Views/Books/Details.cshtml -->
@model IncognitoReads.Models.Book

<div class="book-details">
    <div class="book-header">
        <h1>@Model.Title</h1>
        <h3>by @Model.Author</h3>
    </div>

    <div class="actions">
        <a href="@Url.Action("Notes", "Books", new { bookId = Model.Id })" class="btn btn-primary">View/Add Notes</a>
        <a href="@Url.Action("Index", "Books")" class="btn btn-secondary">Back to Books</a>
    </div>

    <div class="content-section">
        <div class="book-preview" style="background-color: @Model.Color">
            <h2>@Model.Title</h2>
            <p>@Model.Author</p>
        </div>

        <div class="notes-preview">
            <h2>Notes (@Model.Notes.Count)</h2>

            @if (Model.Notes.Any())
            {
                <ul class="notes-list">
                    @foreach (var note in Model.Notes)
                    {
                        <li>
                            <h3>@note.Title</h3>
                            <p>@note.CreatedAt.ToString("MMM dd, yyyy")</p>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No notes yet. <a href="@Url.Action("Notes", "Books", new { bookId = Model.Id })">Add a note</a></p>
            }
        </div>
    </div>
</div>

<style>
    .book-details {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        width: 80%;
        background-color: #2a211f;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        font-family: Arial, sans-serif;
        color: white;
    }

    .book-header {
        text-align: center;
        padding-bottom: 20px;
        border-bottom: 1px solid #3a312f;
        margin-bottom: 20px;
    }

    .actions {
        margin-bottom: 20px;
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .book-preview {
        width: 200px;
        height: 300px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        margin-bottom: 20px;
        padding: 20px;
        border: 2px solid #000;
        gap: 20px;
    }

    .content-section {
        display: flex;
        gap: 20px;
    }

    .notes-preview {
        flex: 1;
        background-color: #3a312f;
        border-radius: 5px;
        padding: 15px;
        min-height: 300px;
    }

    .notes-list {
        list-style-type: none;
        padding: 0;
    }

        .notes-list li {
            padding: 10px;
            border-bottom: 1px solid #eee;
        }

    .btn {
        display: inline-block;
        padding: 8px 16px;
        margin-right: 10px;
        text-decoration: none;
        border-radius: 4px;
    }

    .btn-primary {
        background-color: #2d1313;
        border-color: #261010;
        color: white;
    }

        .btn-primary:hover {
            background-color: #2d1313;
            border-color: #261010;
        }

    .btn-secondary {
        background-color: #586169;
        color: white;
    }
</style>