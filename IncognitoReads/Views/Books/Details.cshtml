<!-- Path: IncognitoReads/Views/Books/Details.cshtml -->
@model IncognitoReads.Models.Book

<div class="book-details">
    <div class="book-header">
        <h1>@Model.Title</h1>
        <h3>by @Model.Author</h3>
    </div>
    
    <div class="actions">
        <a href="@Url.Action("Notes", "Books", new { bookId = Model.Id })" class="btn btn-primary">View/Add Notes</a>
        <a href="@Url.Action("Index", "Books")" class="btn btn-secondary">Back to Books</a>
    </div>
    
    <div class="book-preview" style="background-color: @Model.Color">
        <h2>@Model.Title</h2>
        <p>@Model.Author</p>
    </div>
    
    <div class="notes-preview">
        <h2>Notes (@Model.Notes.Count)</h2>
        
        @if (Model.Notes.Any())
        {
            <ul class="notes-list">
                @foreach (var note in Model.Notes)
                {
                    <li>
                        <h3>@note.Title</h3>
                        <p>@note.CreatedAt.ToString("MMM dd, yyyy")</p>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No notes yet. <a href="@Url.Action("Notes", "Books", new { bookId = Model.Id })">Add a note</a></p>
        }
    </div>
</div>

<style>
    .book-details {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }
    
    .book-header {
        margin-bottom: 20px;
    }
    
    .actions {
        margin-bottom: 20px;
    }
    
    .book-preview {
        width: 200px;
        height: 300px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        margin-bottom: 20px;
        padding: 20px;
        border: 2px solid #000;
    }
    
    .notes-list {
        list-style-type: none;
        padding: 0;
    }
    
    .notes-list li {
        padding: 10px;
        border-bottom: 1px solid #eee;
    }
    
    .btn {
        display: inline-block;
        padding: 8px 16px;
        margin-right: 10px;
        text-decoration: none;
        border-radius: 4px;
    }
    
    .btn-primary {
        background-color: #007bff;
        color: white;
    }
    
    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }
</style>